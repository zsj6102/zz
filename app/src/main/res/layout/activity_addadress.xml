<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical">

    <include layout="@layout/base_header" />

    <TextView
        android:id="@+id/add_newAddress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_sumbit_height"
        android:background="@color/main_LinearLayout_background"
        android:gravity="center_vertical"
        android:hint="请选择省市区"
        android:paddingLeft="@dimen/paddingLeft"
        android:paddingRight="@dimen/paddingRight"
        android:textColor="@color/text_color_first"
        android:textSize="@dimen/main_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/paddingLeft"
        android:layout_marginRight="@dimen/paddingRight"
        android:background="@color/line_color_second" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_sumbit_height"
        android:background="@color/main_LinearLayout_background"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/paddingLeft"
        android:paddingRight="@dimen/paddingRight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@color/main_LinearLayout_background"
            android:gravity="center_vertical"
            android:text="邮政编码        "
            android:textColor="@color/text_color_first"
            android:textSize="@dimen/main_text_size" />

        <EditText
            android:id="@+id/et_detailCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:ellipsize="end"
            android:hint="请填写邮政编码"
            android:maxLines="1"
            android:singleLine="false"
            android:textColor="@color/text_color_thirst"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/main_text_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/paddingLeft"
        android:layout_marginRight="@dimen/paddingRight"
        android:background="@color/line_color_second" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_sumbit_height"
        android:background="@color/main_LinearLayout_background"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/paddingLeft"
        android:paddingRight="@dimen/paddingRight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@color/main_LinearLayout_background"
            android:gravity="center_vertical"
            android:text="具体地址        "
            android:textColor="@color/text_color_first"
            android:textSize="@dimen/main_text_size" />

        <EditText
            android:id="@+id/et_detailAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:ellipsize="end"
            android:hint="请填写具体地址"
            android:maxLines="1"
            android:singleLine="false"
            android:textColor="@color/text_color_thirst"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/main_text_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/paddingLeft"
        android:layout_marginRight="@dimen/paddingRight"
        android:background="@color/line_color_second"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_sumbit_height"
        android:background="@color/main_LinearLayout_background"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/paddingLeft"
        android:paddingRight="@dimen/paddingRight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@color/main_LinearLayout_background"
            android:gravity="center_vertical"
            android:text="收货人姓名    "
            android:textColor="@color/text_color_first"
            android:textSize="@dimen/main_text_size" />

        <EditText
            android:id="@+id/et_detailPeople"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:ellipsize="end"
            android:hint="请输入收货人姓名"
            android:maxLines="1"
            android:singleLine="false"
            android:textColor="@color/text_color_thirst"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/main_text_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/paddingLeft"
        android:layout_marginRight="@dimen/paddingRight"
        android:background="@color/line_color_second"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_sumbit_height"
        android:background="@color/main_LinearLayout_background"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/paddingLeft"
        android:paddingRight="@dimen/paddingRight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@color/main_LinearLayout_background"
            android:gravity="center_vertical"
            android:text="手机号码        "
            android:textColor="@color/text_color_first"
            android:textSize="@dimen/main_text_size" />

        <EditText
            android:id="@+id/et_detailPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:ellipsize="end"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:singleLine="false"
            android:textColor="@color/text_color_thirst"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/main_text_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/paddingLeft"
        android:layout_marginRight="@dimen/paddingRight"
        android:background="@color/line_color_second"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_sumbit_height"
        android:background="@color/main_LinearLayout_background"
        android:paddingLeft="@dimen/paddingLeft"
        android:paddingRight="@dimen/paddingRight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:background="@color/main_LinearLayout_background"
            android:gravity="center_vertical"
            android:text="设为默认地址"
            android:textColor="@color/text_color_first"
            android:textSize="@dimen/main_text_size" />

        <ImageView
            android:id="@+id/iv_def_addr"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/select_no" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/paddingLeft"
        android:layout_marginRight="@dimen/paddingRight"
        android:background="@color/line_color_first"></View>

    <TextView
        android:id="@+id/tv_sumbitAdd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_sumbit_height"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/red_solid_shape"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/main_title_size" />
</LinearLayout>