<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_header" />

    <LinearLayout style="@style/WriteLinerStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="*"
            android:textColor="@color/main_red"
            android:textSize="@dimen/main_text_size" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="联系人:"
            android:textColor="@color/text_color_first"
            android:textSize="@dimen/main_text_size" />

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="@color/text_color_thirst"
            android:textSize="@dimen/main_text_size" />
    </LinearLayout>

    <View style="@style/divingStyle" />

    <LinearLayout style="@style/WriteLinerStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="*"
            android:textColor="@color/main_red"
            android:textSize="@dimen/main_text_size" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="电话:"
            android:textColor="@color/text_color_first"
            android:textSize="@dimen/main_text_size" />

        <TextView
            android:id="@+id/contact_mobile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="@color/text_color_thirst"
            android:textSize="@dimen/main_text_size" />
    </LinearLayout>

    <View style="@style/divingStyle" />

    <LinearLayout style="@style/WriteLinerStyle">

        <TextView
            style="@style/RedTextViewStyle"
            android:text="*" />

        <TextView
            style="@style/WriteTextTitileStyle"
            android:text="QQ:" />

        <TextView
            android:id="@+id/contact_qq"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="@color/text_color_thirst"
            android:textSize="@dimen/main_text_size" />
    </LinearLayout>

    <View style="@style/divingStyle" />

    <LinearLayout style="@style/WriteLinerStyle">

        <TextView
            style="@style/RedTextViewStyle"
            android:text="*" />

        <TextView
            style="@style/WriteTextTitileStyle"
            android:text="微信号:" />

        <TextView
            android:id="@+id/contact_wechat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="@color/text_color_thirst"
            android:textSize="@dimen/main_text_size" />
    </LinearLayout>

    <LinearLayout style="@style/WriteLinerStyle">

        <TextView
            style="@style/RedTextViewStyle"
            android:text="*" />

        <TextView
            style="@style/WriteTextTitileStyle"
            android:text="定制时间:" />

        <TextView
            android:id="@+id/contact_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="@color/text_color_thirst"
            android:textSize="@dimen/main_text_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color_first" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_LinearLayout_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="15.5dp"
        android:paddingTop="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="11dp"
            android:src="@mipmap/customleft" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定制说明"
            android:textColor="#402020"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="11dp"
            android:src="@mipmap/customright" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_LinearLayout_background"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="@dimen/paddingLeft"
        android:paddingRight="@dimen/paddingRight">

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/gray_border_white_solid"
            android:gravity="left"
            android:padding="@dimen/margin_15dp"
            android:textColor="@color/text_color_thirst"
            android:textSize="12sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/custom_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_7.5dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/line_color_first" />
</LinearLayout>