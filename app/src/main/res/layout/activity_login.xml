<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical">

    <include layout="@layout/base_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/radius_splite_line_second"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="17dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/phone" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="27dp"
            android:layout_marginRight="15dp"
            android:background="@color/line_color_first"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/et_loginPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="14dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:singleLine="false"
                android:textColor="@color/text_color_thirst"
                android:textColorHint="@color/text_color_thirst"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/main_text_size" />

            <ImageView
                android:id="@+id/iv_removePhoneLogin"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/remove"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/radius_splite_line_second"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="17dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/pwd" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="27dp"
            android:layout_marginRight="15dp"
            android:background="@color/line_color_first"></View>

        <EditText
            android:id="@+id/et_loginPwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="14"
            android:maxLines="1"
            android:singleLine="false"
            android:textColor="@color/text_color_thirst"
            android:textColorHint="@color/text_color_thirst"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/main_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_forgetPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:text="忘记密码?"
        android:textColor="@color/main_brown"
        android:textSize="@dimen/main_text_size" />

    <TextView
        android:id="@+id/tv_sumbitLogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_sumbit_height"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/red_solid_shape"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/main_title_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="64dp"
        android:text="第三方登录"
        android:textColor="@color/text_color_thirst"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_qq"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_qq" />

        <ImageView
            android:id="@+id/iv_weChat"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@mipmap/icon_wechat" />

        <ImageView
            android:id="@+id/iv_sina"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_sina" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="34dp"
        android:gravity="center_horizontal|bottom"
        android:text="©2015-2018\n顶藏网商城" />
</LinearLayout>