<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/line_color_thirst"
        android:orientation="vertical">

        <include layout="@layout/base_header" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/paddingLeft"
                    android:paddingRight="@dimen/paddingRight">

                    <LinearLayout
                        android:id="@+id/ll_No"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单号："
                            android:textColor="@color/text_color_thirst"
                            android:textSize="@dimen/main_text_size" />

                        <TextView
                            android:id="@+id/orderdetails_No"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_first"
                            android:textSize="@dimen/main_text_size" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/orderdetails_State"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="订单状态"
                        android:textColor="@color/main_red"
                        android:textSize="@dimen/main_text_size" />

                    <TextView
                        android:id="@+id/orderdetails_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_No"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/text_color_thirst"
                        android:textSize="12sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color_second" />

                <com.property.colpencil.colpencilandroidlibrary.Ui.WrapHeightListView
                    android:id="@+id/orderdetails_GoodInfor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/line_color_second"
                    android:dividerHeight="0.5dp"
                    android:scrollbars="none" />


                <View
                    android:id="@+id/itemOrder_View"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color_second" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/main_LinearLayout_background"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收货地址："
                            android:textColor="@color/text_color_thirst"
                            android:textSize="@dimen/main_text_size" />

                        <TextView
                            android:id="@+id/orderdetails_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_first"
                            android:textSize="@dimen/main_text_size" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/line_color_second" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收货人："
                            android:textColor="@color/text_color_thirst"
                            android:textSize="@dimen/main_text_size" />

                        <TextView
                            android:id="@+id/orderdetails_people"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_first"
                            android:textSize="@dimen/main_text_size" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/line_color_second" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="@dimen/paddingLeft"
                    android:paddingRight="@dimen/paddingRight">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="全部商品"
                        android:textColor="@color/text_color_first"
                        android:textSize="@dimen/main_text_size" />

                    <TextView
                        android:id="@+id/orderdetails_goodsPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/main_red"
                        android:textSize="@dimen/main_text_size" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color_second" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:paddingLeft="@dimen/paddingLeft"
                    android:paddingRight="@dimen/paddingRight">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="邮费"
                        android:textColor="@color/text_color_first"
                        android:textSize="@dimen/main_text_size" />

                    <TextView
                        android:id="@+id/orderdetails_postage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/main_red"
                        android:textSize="@dimen/main_text_size" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color_second" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:paddingLeft="@dimen/paddingLeft"
                    android:paddingRight="@dimen/paddingRight">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="优惠券"
                        android:textColor="@color/text_color_first"
                        android:textSize="@dimen/main_text_size" />

                    <TextView
                        android:id="@+id/orderdetails_goodsCoupons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/main_red"
                        android:textSize="@dimen/main_text_size" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color_second" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:paddingLeft="@dimen/paddingLeft"
                    android:paddingRight="@dimen/paddingRight">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="代金券"
                        android:textColor="@color/text_color_first"
                        android:textSize="@dimen/main_text_size" />

                    <TextView
                        android:id="@+id/orderdetails_goodsVoucher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/main_red"
                        android:textSize="@dimen/main_text_size" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color_second" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:paddingLeft="@dimen/paddingLeft"
                    android:paddingRight="@dimen/paddingRight">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="促销折扣"
                        android:textColor="@color/text_color_first"
                        android:textSize="@dimen/main_text_size" />

                    <TextView
                        android:id="@+id/orderdetails_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/main_red"
                        android:textSize="@dimen/main_text_size" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color_second" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/paddingLeft"
                    android:paddingRight="@dimen/paddingRight">

                    <TextView
                        android:id="@+id/orderdetails_payName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_first"
                        android:textSize="@dimen/main_text_size" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="总计："
                        android:textColor="@color/text_color_first"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/orderdetails_goodsPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_red"
                        android:textSize="@dimen/main_text_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color_second" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_color_second" />

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_deliveryFinished_orderDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/order_btn1"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/cccccc_radius_splite_line_second"
                android:gravity="center"
                android:text="申请退款"
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/main_text_size"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/order_btn2"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/cccccc_radius_splite_line_second"
                android:gravity="center"
                android:text="查看物流"
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/main_text_size"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/order_btn3"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/red_solid_shape"
                android:gravity="center"
                android:text="确认收货"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_size"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>