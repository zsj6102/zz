<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical">

    <include layout="@layout/base_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/radius_splite_line_second"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_sumbit_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="14.5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="    手机号:"
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/main_text_size" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/etPwd_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="14dp"
                    android:background="@null"
                    android:textCursorDrawable="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="@color/text_color_thirst"
                    android:textColorHint="@color/text_color_thirst"
                    android:textSize="@dimen/main_text_size" />

                <ImageView
                    android:id="@+id/iv_removePhonePwd"
                    android:layout_width="14dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/remove"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color_first"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_sumbit_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="    验证码:"
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/main_text_size" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/etPwd_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="110dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:singleLine="false"
                    android:textColor="@color/text_color_thirst"
                    android:textColorHint="@color/text_color_thirst"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/main_text_size" />

                <TextView
                    android:id="@+id/tv_getCode"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/main_brown"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_text_size" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color_first"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_sumbit_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/tvPwd_setPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="设置密码:"
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/main_text_size" />


            <EditText
                android:id="@+id/etPwd_setPwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请设置密码"
                android:inputType="textPassword"
                android:maxLength="14"
                android:maxLines="1"
                android:singleLine="false"
                android:textColor="@color/text_color_thirst"
                android:textColorHint="@color/text_color_thirst"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/main_text_size" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color_first"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_sumbit_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="确认密码:"
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/main_text_size" />

            <EditText
                android:id="@+id/etPwd_surePwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请再次输入密码"
                android:inputType="textPassword"
                android:maxLength="14"
                android:maxLines="1"
                android:singleLine="false"
                android:textColor="@color/text_color_thirst"
                android:textColorHint="@color/text_color_thirst"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/main_text_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_seeAgreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="invisible">

        <CheckBox
            android:id="@+id/check_protocol"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/protocol_selector"
            android:button="@null"
            android:checked="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已同意"
            android:textColor="@color/text_color_thirst"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_seeAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《顶藏网服务协议》"
            android:textColor="@color/main_brown"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_sumbitPwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_sumbit_height"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/red_solid_shape"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/main_title_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="34dp"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="©2015-2018"
            android:textColor="@color/text_color_thirst"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="顶藏网商城"
            android:textColor="@color/text_color_thirst"
            android:textSize="@dimen/main_text_size" />
    </LinearLayout>

</LinearLayout>