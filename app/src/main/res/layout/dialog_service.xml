<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_service_phonenum"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:gravity="center"
        android:text="0592-888999"
        android:textColor="@color/text_color_first"
        android:textSize="@dimen/text_size_16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0.5dp"
        android:background="@color/line_color_first" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/service_dialog_sure"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/main_red"
            android:textSize="@dimen/text_size_18sp" />

        <View
            android:layout_width="@dimen/padding_0.5dp"
            android:layout_height="match_parent"
            android:background="@color/line_color_first" />


        <TextView
            android:id="@+id/service_dialog_cancle"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_color_first"
            android:textSize="@dimen/text_size_18sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0.5dp"
        android:background="@color/line_color_first" />
</LinearLayout>