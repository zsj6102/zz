<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_fff5f4"
    android:orientation="vertical"
    android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/radius_splite_line"
        android:orientation="vertical"
        android:paddingBottom="13dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/header_product_goodname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/main_brown"
            android:textSize="@dimen/main_text_size" />

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />

        <com.property.colpencil.colpencilandroidlibrary.Ui.MosaicGridView
            android:id="@+id/gridview_productdetails_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="5dp"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="5dp">

        </com.property.colpencil.colpencilandroidlibrary.Ui.MosaicGridView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/weekShoot_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离结束："
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/main_text_size" />

            <TextView
                android:id="@+id/weekShoot_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天"
                android:textColor="@color/main_red"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/productdetails_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:textColor="@color/main_red"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>