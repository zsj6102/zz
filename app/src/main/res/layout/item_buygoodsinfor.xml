<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/orderCenter_iv"
        android:layout_width="55dp"
        android:layout_height="55dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orderCenter_goodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxEms="7"
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/main_text_size" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/orderCenter_goodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_red"
                android:textSize="@dimen/main_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orderCenter_goodType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@color/text_color_thirst"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/item_buyAfterSale"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/red_border_white_solid"
                android:gravity="center"
                android:text="申请售后"
                android:textColor="@color/main_red"
                android:textSize="11sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_buyAfterEvaluation"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/red_border_white_solid"
                android:gravity="center"
                android:text="去评价"
                android:textColor="@color/main_red"
                android:textSize="11sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/orderCenter_goodCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_thirst"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>