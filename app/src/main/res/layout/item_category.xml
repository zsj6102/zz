<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_marginRight="@dimen/margin_5dp">

        <RelativeLayout
            android:id="@+id/rl_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10dp"
            android:background="@drawable/category_selector"
            android:gravity="center"
            android:padding="5dp">

            <TextView
                android:id="@+id/item_category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:textColor="@color/main_brown"
                android:textSize="11sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/item_category_remove"
            android:layout_width="@dimen/width_16dp"
            android:layout_height="@dimen/width_16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/margin_5dp"
            android:src="@mipmap/category_remove_icon"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>