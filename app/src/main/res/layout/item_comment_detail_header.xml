<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fffbfa"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.property.colpencil.colpencilandroidlibrary.Ui.SelectableRoundedImageView
            android:id="@+id/comment_detail_userhead"
            android:layout_width="@dimen/height_35dp"
            android:layout_height="@dimen/height_35dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/padding_10dp"
            app:sriv_oval="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/comment_detail_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10dp"
                    android:textColor="@color/main_brown"
                    android:textSize="@dimen/text_size_13sp" />

                <ImageView
                    android:id="@+id/iv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_13dp"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="15dp">

                <TextView
                    android:id="@+id/add_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/circle_left_item_nickname"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/red_border_white_solid"
                    android:padding="3dp"
                    android:text="加精"
                    android:textColor="@color/main_red"
                    android:textSize="8sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/iv_sticky"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/circle_left_item_nickname"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/darkgreen_border_white_solid"
                    android:padding="3dp"
                    android:text="置顶"
                    android:textColor="@color/color_192a46"
                    android:textSize="8sp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/comment_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:textColor="@color/text_color_first"
        android:textSize="@dimen/text_size_15sp" />

    <TextView
        android:id="@+id/comment_detail_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_15dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/padding_10dp"
        android:textColor="@color/color_525252"
        android:textSize="@dimen/text_size_14sp" />

    <com.property.colpencil.colpencilandroidlibrary.Ui.AdapterView.MosaicGridView
        android:id="@+id/item_comment_image_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_fffbfa"
        android:numColumns="3"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/comment_detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:text="16-10-11 12:20"
        android:textColor="@color/text_color_thirst"
        android:textSize="@dimen/text_size_10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相关视频链接："
            android:textColor="@color/text_color_thirst"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/comment_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#d9a5a5"
            android:textSize="@dimen/text_size_14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0.5dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:background="@color/line_color_first" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:text="评论"
        android:textColor="@color/main_brown"
        android:textSize="@dimen/text_size_16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0.5dp"
        android:layout_marginTop="@dimen/padding_10dp"
        android:background="@color/line_color_first" />

    <com.property.colpencil.colpencilandroidlibrary.Ui.AdapterView.MosaicListView
        android:id="@+id/item_comment_answer_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_fffbfa"
        android:divider="@color/transparent"
        android:dividerHeight="@dimen/width_0dp"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/tv_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:textColor="@color/main_brown"
        android:textSize="@dimen/text_size_16sp" />

</LinearLayout>