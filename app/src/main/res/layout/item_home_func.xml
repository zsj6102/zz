<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/item_home_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_home_func_iv"
            android:layout_width="@dimen/height_44dp"
            android:layout_height="@dimen/height_44dp"
            android:layout_marginTop="@dimen/margin_13dp" />

        <TextView
            android:id="@+id/item_home_func_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_12.5dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:text="@string/home_sign_in"
            android:textColor="@color/text_color_first"
            android:textSize="@dimen/text_size_12sp" />

    </LinearLayout>

</LinearLayout>