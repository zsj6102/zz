<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_home_regood_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_7.5dp"
        android:layout_marginRight="@dimen/margin_7.5dp"
        android:layout_marginTop="@dimen/padding_10dp"
        android:background="@color/color_fffbfa"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_good_img"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/item_good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_7dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:lines="2"
            android:textColor="@color/text_color_second"
            android:textSize="@dimen/text_size_11sp" />

        <TextView
            android:id="@+id/item_good_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/padding_10dp"
            android:gravity="center_horizontal"
            android:textColor="@color/main_red"
            android:textSize="@dimen/text_size_12sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>