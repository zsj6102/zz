<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_image_big"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_184dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/padding_10dp"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/item_image_middle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_184dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/padding_10dp"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/item_image_small"
        android:layout_width="@dimen/width_50dp"
        android:layout_height="@dimen/width_50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_15dp"
        android:layout_marginLeft="@dimen/padding_10dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:scaleType="fitXY"
        android:visibility="gone" />

</LinearLayout>