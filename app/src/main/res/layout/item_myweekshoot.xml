<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_LinearLayout_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/paddingLeft"
        android:paddingRight="@dimen/paddingRight">

        <TextView
            android:id="@+id/itemMyWeekShoot_State"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/main_red"
            android:textSize="@dimen/main_text_size" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/item_iv_delete"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:src="@mipmap/delete"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/delete_iv"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/delete"
            android:visibility="gone" />

        <TextView
            android:id="@+id/itemMyWeekShoot_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_color_thirst"
            android:textSize="@dimen/main_text_size" />
    </LinearLayout>

    <View
        android:id="@+id/itemAfter_View"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color_second" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/itemMyWeekShoot_img"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/itemMyWeekShootPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="15dp"
                android:textColor="@color/main_red"
                android:textSize="@dimen/main_text_size" />

            <TextView
                android:id="@+id/itemMyWeekShootName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/itemMyWeekShootPrice"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/main_text_size" />

            <TextView
                android:id="@+id/itemMyWeekShootSpec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="18mm 红色"
                android:textColor="@color/text_color_thirst"
                android:textSize="13sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/itemMyWeekShootCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_color_thirst"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color_second" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/current_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="当前拍价：￥1800"
            android:textColor="@color/main_red"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/itemMyWeekShoot__sumbit"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/red_solid_shape"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/main_text_size" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color_first" />

    <View
        android:id="@+id/item_myweekShoot"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/main_background"
        android:visibility="gone" />
</LinearLayout>