<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_news_iv"
        android:layout_width="@dimen/height_85dp"
        android:layout_height="@dimen/height_85dp"
        android:layout_marginBottom="@dimen/margin_15dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_10dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_news_title"
                android:layout_width="@dimen/width_0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_10dp"
                android:layout_weight="1"
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/item_news_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_15dp"
                android:text="2016-07-25"
                android:textColor="@color/text_color_thirst"
                android:textSize="@dimen/text_size_11sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_news_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_10dp"
            android:layout_marginTop="@dimen/padding_10dp"
            android:maxLines="3"
            android:textColor="@color/text_color_first"
            android:textSize="@dimen/text_size_14sp" />

    </LinearLayout>

</LinearLayout>