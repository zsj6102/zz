<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/goTo_orderdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_LinearLayout_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:paddingLeft="@dimen/paddingLeft"
            android:paddingRight="@dimen/paddingRight">

            <TextView
                android:id="@+id/itemOrder_No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="订单号"
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/main_text_size" />

            <TextView
                android:id="@+id/itemOrder_State"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="订单状态"
                android:textColor="@color/main_red"
                android:textSize="@dimen/main_text_size" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color_second"></View>

        <com.property.colpencil.colpencilandroidlibrary.Ui.WrapHeightListView
            android:id="@+id/itemOrder_GoodInfor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/line_color_second"
            android:dividerHeight="0.5dp"
            android:scrollbars="none" />


        <View
            android:id="@+id/itemOrder_View"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color_second" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/paddingLeft"
            android:paddingRight="@dimen/paddingRight">

            <ImageView
                android:id="@+id/delete_iv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:src="@mipmap/delete"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_btn1"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/cccccc_radius_splite_line_second"
                    android:gravity="center"
                    android:textColor="@color/text_color_first"
                    android:textSize="@dimen/main_text_size"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_btn2"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/cccccc_radius_splite_line_second"
                    android:gravity="center"
                    android:textColor="@color/text_color_first"
                    android:textSize="@dimen/main_text_size"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_btn3"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:background="@drawable/red_solid_shape"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_text_size"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="拒绝理由："
                    android:textColor="@color/text_color_thirst"
                    android:textSize="@dimen/main_text_size" />

                <TextView
                    android:id="@+id/itemOrder_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_thirst"
                    android:textSize="@dimen/main_text_size" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color_first" />

        <View
            android:id="@+id/bottomView_order"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/main_background"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>