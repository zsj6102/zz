<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_recommend"
        android:layout_width="@dimen/width_109dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_9dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_15dp">

        <ImageView
            android:id="@+id/item_recommend_goodimg"
            android:layout_width="@dimen/width_109dp"
            android:layout_height="@dimen/width_71dp" />

        <TextView
            android:id="@+id/item_recommend_goodname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_7dp"
            android:ellipsize="end"
            android:gravity="left"
            android:lines="2"
            android:textColor="@color/text_color_first"
            android:textSize="@dimen/text_size_11sp" />

        <TextView
            android:id="@+id/item_recommend_goodprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_red"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>