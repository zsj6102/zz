<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_44dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/post_dialog_item_tv"
                android:layout_width="@dimen/width_0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/red_wood"
                android:textColor="@color/text_color_first"
                android:textSize="@dimen/text_size_14sp" />

            <ImageView
                android:id="@+id/post_dialog_item_iv"
                android:layout_width="@dimen/height_22dp"
                android:layout_height="@dimen/height_22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_15dp"
                android:src="@mipmap/post_dialog_uncheck" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_0.5dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:background="@color/line_color_second" />

    </LinearLayout>

</LinearLayout>