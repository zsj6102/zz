<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/popwindow_null"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_0dp"
        android:layout_weight="1"
        android:background="@color/transparent_7f000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background">

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_130dp"
            android:layout_margin="@dimen/margin_5dp"
            android:background="@drawable/gray_border_white_solid"
            android:gravity="left"
            android:hint="请输入评论内容"
            android:padding="@dimen/margin_5dp"
            android:textColor="@color/text_color_thirst"
            android:textColorHint="@color/text_color_thirst"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_size_14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background"
        android:gravity="right">

        <Button
            android:id="@+id/pop_send"
            android:layout_width="@dimen/height_80dp"
            android:layout_height="@dimen/width_30dp"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:background="@drawable/red_solid_shape"
            android:text="回复"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14sp" />

    </LinearLayout>

</LinearLayout>